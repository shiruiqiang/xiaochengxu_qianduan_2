.ui-panel{ background: #fff; border-radius: 4rpx; margin-bottom: 20rpx; padding: 0 20rpx; }
.ui-cell{position: relative;}
.ui-cell:not(:first-of-type):before{ content: ''; position: absolute; left: 0; right: 0; background: #eee; width: 100%; height: 1px; -webkit-transform: scaleY(.5); transform: scaleY(.5); -webkit-transform-origin: 0 0; transform-origin: 0 0; }
.ui-cell-row{ position: relative; width:100%; display: -webkit-flex; display: flex; padding: 30rpx 0; -webkit-align-items: center; align-items: center; }
.ui-cell-hd{ height:44rpx; }
.ui-cell-bt{ -webkit-flex-shrink: 0; flex-shrink: 0; -webkit-flex-grow: 1; flex-grow: 1; -webkit-flex-basis: auto; flex-basis: auto; max-width: 100%; width: 0; word-wrap: break-word; word-break: normal; padding-left: 20rpx; }
.ui-cell-bt .badge{margin-left:10rpx;}
.ui-cell-ft .icon-arrow{ display: inline-block; width: 12rpx; height: 21rpx; background-image: url('http://wq.xinxao.com/addons/ss48_match/images/arrow_right.png?1'); background-repeat: no-repeat; background-size: 12rpx 21rpx; }
.ui-cell-ft .tip{ color: #a8acc0; font-size:24rpx; margin-right:20rpx; }
.vip-tip .ui-cell-row{ padding: 24rpx 0; }
.logout-btn .ui-cell-row{-webkit-justify-content: center;justify-content: center;}
.look-list{display: -webkit-flex;display: flex;padding-bottom:20rpx;}
.look-list .item .thumb{width:80rpx;border-radius: 50%}
.look-list .item .thumb .item-cover{border-radius: 50%}
.look-list .item .name{font-size:22rpx;line-height:1.8;}


.icon-picture{display: inline-block; width: 45rpx; height: 45rpx;margin-top: -10rpx;}

