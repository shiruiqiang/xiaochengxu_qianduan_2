wx-button.form_button{background-color:transparent;padding:0;margin:0;display:inline;position:static;border:0;padding-left:0;padding-right:0;border-radius:0;font-size:0rpx;color:transparent;}
wx-button.form_button::after{content:'';width:0;height:0;-webkit-transform:scale(1);transform:scale(1);display:none;background-color:transparent;}
.ui-footer{width:100%;background-color:#ffffff;display:-webkit-box;-webkit-box-sizing: border-box;box-sizing: border-box;height:108rpx;position:fixed; bottom:0;right: 0;z-index:999;}
.ui-footer:after { content: ""; position: absolute; left: 0; top: 0; width: 100%; height: 1px; -webkit-transform: scaleY(.5); transform: scaleY(.5); -webkit-transform-origin: 0 0; transform-origin: 0 0; background: #dfdfdd; }
.ui-footer .icon,.ui-footer wx-form{display:-webkit-box;width:100%;height:100%;-webkit-box-flex: 1;box-flex: 1;-webkit-box-orient:vertical;}
.ui-footer .icon{text-align:center;}
.ui-footer .icon wx-i{width:45rpx;height:45rpx;margin:9px auto 3px;display:block;background-image: url('http://wq.xinxao.com/addons/ss48_match/images/ft_ico.png?1');background-repeat: no-repeat;background-size: 45rpx 360rpx;position: relative;}
.ui-footer .icon wx-span{content:'';font-size: 24rpx;line-height: 1;color: #353535;display:block}
.ui-footer .icon.on wx-span{color:#ff677d;}
.ui-footer .icon.index wx-i{background-position:0 0;}
.ui-footer .icon.act wx-i{background-position:0 -90rpx;}
.ui-footer .icon.im wx-i{background-position:0 -180rpx;}
.ui-footer .icon.my wx-i{background-position:0 -270rpx;}
.ui-footer .icon.index.on wx-i{background-position:0 -45rpx;}
.ui-footer .icon.act.on wx-i{background-position:0 -135rpx;}
.ui-footer .icon.im.on wx-i{background-position:0 -225rpx;}
.ui-footer .icon.my.on wx-i{background-position:0 -315rpx;}
.ui-footer .badge{ position: absolute; right: -10rpx; top: -4rpx; }
.list-area .ui-label{ margin-right: 12rpx; }
