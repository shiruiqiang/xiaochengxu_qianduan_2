page { background-color: #fff; }
.container{padding-bottom:98rpx;}
.ui-header{width:100%;position: relative;}
.ui-header .back-home{ position: absolute; top: 20rpx; left: 20rpx; padding:10rpx 20rpx; color:#fff; border-radius:4rpx; background:rgba(0, 0, 0, 0.6); display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; }
.ui-header .back-home:before { content: ''; display: inline-block; border: #fff solid 2rpx; width: 8px; height: 8px; border-top: none; border-right: none; -webkit-transform: rotate(45deg); transform: rotate(45deg); }
.ui-header .thumb{ width:100%; height:350rpx; position: relative; }
.ui-header .thumb .img{ display: block; width: 100%; height: 100%; position: absolute; top: 0; left: 0; background-repeat: no-repeat; -webkit-background-size: 100% auto; background-size: 100% auto; }
.act_title{padding:24rpx 30rpx 24rpx 30rpx;}
.act_title .tit{font-size:36rpx;color:#000;}
.act_title .info{ display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; -webkit-align-items: center; align-items: center; }
.act_title .info .hits{ color:#808080; }
.act_title .info .hits .icon-read{ width:32rpx; height:21rpx; display: inline-block; background-image: url('http://wq.xinxao.com/addons/ss48_match/images/icon-read.png?1'); background-repeat: no-repeat; background-size: 32rpx 21rpx; margin-right:5rpx; }
.act_title .btn-default{ width: auto; display: inline-block; font-size:28rpx; height:62rpx; line-height:62rpx; color:#111420; background-color: #ffdf3b; margin: 0; }
.ui-panel{ border-top:20rpx solid #f3f3f3; background-color:#fff; }
.ui-panel-hd{ font-size:32rpx; color:#ff677d; padding:20rpx 30rpx; }
.ui-panel-hd:before { content: ""; display: inline-block; vertical-align: middle; margin-top: -2px; margin-right: 8px; height: 16px; width: 3px; background-color: #ff677d; }
.sign_content{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; padding: 30rpx 30rpx 30rpx 20rpx; position: relative; }
.sign_content:after{ content: ''; position: absolute; left: 0; bottom: 0; background: #ddd; width: 100%; height: 1px; -webkit-transform: scaleY(.5); transform: scaleY(.5); -webkit-transform-origin: 0 0; transform-origin: 0 0; }
.sign_content .sign_count{ font-size:28rpx; color:#ff677d; display: -webkit-flex; display: flex; -webkit-flex-direction: column; flex-direction: column; -webkit-align-items: center; align-items: center; border-right: 1px solid #e3e3e3; margin-right:20rpx; width:140rpx; padding-right:10rpx; box-sizing: border-box; line-height:normal; }
.sign_content .sign_count wx-em{ font-size:32rpx; }
.sign_userlist{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; }
.sign_userlist:after{ content: ''; display: inline-block; border: #a6a6a6 solid 1px; width: 16rpx; height: 16rpx; border-top: none; border-right: none; -webkit-transform: rotate(-135deg); transform: rotate(-135deg); }
.sign_userlist .thumb{ width:70rpx; height:70rpx; margin-right:20rpx; border-radius: 5000px; }
.sign_userlist .thumb .img{ width:100%; height:100%; border-radius: 5000px; display: inline-block; background-repeat: no-repeat; background-size: cover; }
.item_wrap{ padding:0 0 0 30rpx; }
.item_wrap .item{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; padding:24rpx 24rpx 24rpx 0; position: relative; }
.item_wrap .item:not(:last-of-type):before{ content: ''; position: absolute; left: 0; bottom: 0; background: #ddd; width: 100%; height: 1px; -webkit-transform: scaleY(.5); transform: scaleY(.5); -webkit-transform-origin: 0 0; transform-origin: 0 0; }
.item_wrap .item.ui-arrowlink:after{ content: ''; position: absolute; right:30rpx; top:50%; margin-top:-8rpx; display: inline-block; border: #a6a6a6 solid 1px; width: 16rpx; height: 16rpx; border-top: none; border-right: none; -webkit-transform: rotate(-135deg); transform: rotate(-135deg); }
.item_wrap .item .icon{ width: 45rpx; height: 45rpx; margin-right:30rpx; display: inline-block; background-repeat: no-repeat; background-size: 45rpx 45rpx; }
.item_wrap .item .icon.money{ background-image: url('http://wq.xinxao.com/addons/ss48_match/images/icon-volume.png?1'); }
.item_wrap .item .icon.date{ background-image: url('http://wq.xinxao.com/addons/ss48_match/images/icon-time.png?1'); }
.item_wrap .item .icon.address{ background-image: url('http://wq.xinxao.com/addons/ss48_match/images/icon-address.png?1'); }
.act_content{ font-size:28rpx; padding:30rpx; }
.act_content wx-image{ display: block; width: auto; max-width: 100%!important; max-height: 100%!important; margin: 10rpx auto; }
.sign_box_wrap{ position: fixed; bottom:0; left: 0; color:#fff; width:100%; height:98rpx; background-color: #ff677d; display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; -webkit-justify-content: center; justify-content: center; }
.sign_box_wrap .sign_icon{ display: inline-block; width:36rpx; height:36rpx; background-image: url('http://wq.xinxao.com/addons/ss48_match/images/poco_release_edit_summary.png?1'); background-repeat: no-repeat; background-size: 36rpx 36rpx; margin-right:10rpx; margin-top:-4rpx; }
.sign_box_wrap.is_apply { background-color: #ccc; }
.loading{ width:100vw; height:100vh; background-color: #fff; display:-webkit-flex; display:flex; -webkit-align-items:center; align-items:center; -webkit-justify-content:center; justify-content:center; }
.loading .img{ width: 156rpx; height: 162rpx; }
.dialog-cnt-con{margin-bottom: 30rpx;}
.dialog-cnt-con .con{ font-size:28rpx; color:#666666; text-align: center; margin: 0 0 60rpx 0; }
.act_title .label-wrap{ font-size:24rpx; line-height: normal; color:#888; padding:12rpx 0 8rpx; display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; }
.act_title .label{ display: inline-block; border-radius:2rpx; background:#ff758f; color:#fff; font-size:20rpx; height:26rpx; line-height: 26rpx; margin-right:10rpx; padding: 0 10rpx; box-sizing: border-box; vertical-align: top; position: relative; top:-1rpx; }
.act_title .label.vip{background:#9c4cee;background-image: -webkit-linear-gradient(top left, #ef39c6, #9c4cee);}
